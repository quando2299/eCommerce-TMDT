@model IEnumerable<BookBook.Models.ProductsModel>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!--begin::Entry-->
<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container">
        <!--begin::Header-->
        <div class="card-header border-0 d-flex">
            <h3 class="card-title font-weight-bolder text-dark">Danh sách sản phẩm</h3>
            <div class="card-toolbar ml-auto">
                <div class="dropdown dropdown-inline">
                    <div class="btn-group ml-2">
                        <a type="submit" href="@Url.Action("Create", "Products")" class="btn btn-primary font-weight-bold btn-sm px-3 font-size-base ml-5">Thêm mới</a>
                    </div>
                </div>
            </div>
        </div>
        <!--end::Header-->
        <!--begin::Row-->
        <div class="row mt-5">
            @foreach (var item in Model)
            {
                <!--begin::Col-->
                <div class="col-xl-4 col-lg-6 col-md-6 col-sm-6">
                    <!--begin::Card-->
                    <div class="card card-custom gutter-b card-stretch">
                        <!--begin::Body-->
                        <div class="card-body pt-4">
                            <!--begin::Toolbar-->
                            <div class="d-flex justify-content-end">
                                <div class="dropdown dropdown-inline" data-toggle="tooltip" data-placement="left">
                                    <a href="#" class="btn btn-clean btn-hover-light-primary btn-sm btn-icon" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="ki ki-bold-more-hor"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-md dropdown-menu-right">
                                        <!--begin::Navigation-->
                                        <ul class="navi navi-hover py-5">
                                            <li class="navi-item">
                                                <a href="@Url.Action("Edit", "Products", new { id = item.id})" class="navi-link">
                                                    <span class="navi-icon">
                                                        <i class="flaticon2-edit"></i>
                                                    </span>
                                                    <span class="navi-text">Chỉnh sửa</span>
                                                </a>
                                            </li>
                                            <li class="navi-item">
                                                <a asp-action="Delete" asp-route-id="@item.id" class="navi-link">
                                                    <span class="navi-icon">
                                                        <i class="flaticon2-delete"></i>
                                                    </span>
                                                    <span class="navi-text">Xóa</span>
                                                </a>
                                            </li>
                                        </ul>
                                        <!--end::Navigation-->
                                    </div>
                                </div>
                            </div>
                            <!--end::Toolbar-->
                            <!--begin::User-->
                            <div class="d-flex align-items-center mb-7">
                                <!--begin::Pic-->
                                <div class="flex-shrink-0 mr-4 mt-lg-0 mt-3">
                                    <div class="symbol symbol-lg-150">
                                        <img src="@item.image" alt="image" />
                                    </div>
                                    @*<div class="symbol symbol-lg-75 symbol-circle symbol-primary d-none">
                                            <span class="font-size-h3 font-weight-boldest">JM</span>
                                        </div>*@
                                </div>
                                <!--end::Pic-->
                                <!--begin::Title-->
                                <div class="d-flex flex-column">
                                    <a href="#" class="text-dark font-weight-bold text-hover-primary font-size-h4 mb-0">@item.name</a>
                                    <span class="text-muted font-weight-bold">@item.author</span>


                                    <!--begin::Info-->
                                    <div class="mb-7 mt-2">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="text-dark-75 font-weight-bolder mr-2">Số lượng:</span>
                                            <span class="text-muted font-weight-bold">@item.quantity</span>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-cente my-1">
                                            <span class="text-dark-75 font-weight-bolder mr-2">NXB:</span>
                                            <span class="text-muted font-weight-bold">@item.publishing_company</span>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="text-dark-75 font-weight-bolder mr-2">Thể loại:</span>
                                            <span class="text-muted font-weight-bold">@item.typename</span>
                                        </div>
                                    </div>
                                    <!--end::Info-->
                                </div>
                                <!--end::Title-->
                            </div>
                            <!--end::User-->

                            @{
                                var cul = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");   // try with "en-US"
                                string price = item.price.ToString("#,###", cul.NumberFormat);
                            }
                            <div class="btn btn-block btn-sm btn-light-success font-weight-bolder text-uppercase py-4 font-size-h6">@price VNĐ</div>
                        </div>
                        <!--end::Body-->
                    </div>
                    <!--end::Card-->
                </div>
                <!--end::Col-->
            }


        </div>
